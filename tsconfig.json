{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app-core/*": ["src/app/core/*"],
      "@app-models/*": ["src/app/core/models/*"],
      "@app-components/*": ["src/app/theme/shared/components/*"],
      "@app-services/*": ["src/app/core/services/*"],
      "@app-store/*": ["src/app/store/*"],
      "@app-fake-db/*": ["src/app/fake-data/*"],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
